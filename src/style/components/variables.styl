main-color = #21c1fc;
text-color = #3d3d3d;
secondry-color = #ffffff;
light-color = #b7b7b8;
light-text-color = #9e9e9e;


buttonCommon(backgroundColor = main-color, text-color = secondry-color)
    border: none
    border-radius: 6px
    outline: none
    color: text-color
    background: backgroundColor
    font-family: 'Raleway', sans-serif
    cursor: pointer
    font-size: 16px
    font-weight 700

header(fontSize = 48px, textColor = text-color)
    font-size: fontSize
    color: textColor
    font-family: 'Raleway', sans-serif
    font-weight 700

additionalText(fontSize = 18px, textColor = light-text-color)
    font-size: fontSize
    color: textColor
    font-family: 'Raleway', sans-serif
    font-weight 400

input()
    outline: none
    border: solid 1px #e8e8e8
    border-radius: 4px
    height 35px
    width 210px
    padding-left 15px
    margin-right: 20px
    &::-webkit-input-placeholder { /* Chrome/Opera/Safari */
        font-family: 'Raleway', sans-serif
        color: light-text-color
    }
    &::-moz-placeholder { /* Firefox 19+ */
        font-family: 'Raleway', sans-serif
        color: light-text-color
    }
    &:-ms-input-placeholder { /* IE 10+ */
        font-family: 'Raleway', sans-serif
        color: light-text-color
    }
    &:-moz-placeholder { /* Firefox 18- */
        font-family: 'Raleway', sans-serif
        color: light-text-color
    }
    