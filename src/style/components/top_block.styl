.top_block
    height 400px
    width 100%
    background rgba(248,248,251,0.4)
    background-repeat: no-repeat
    background-size: cover
    background-position: center
    position: relative
    @media screen and (max-width 375px)
        height: 450px

    .container
        display: flex
        flex-direction: row
        justify-content: flex-start
        align-items: center
        padding-right: 0

.top_block__absolute_pic
    width: 50%
    height: 100%
    position: relative
    @media screen and (max-width 898px)
        overflow hidden
    img
        position: absolute
        display: block
        margin: auto
        top: 0
        left: 0
        right: 0
        @media screen and (max-width 898px)
            max-height:100%;

.video_background
    position: absolute;
    z-index: -1;
    top: 0px;
    left: 0px;
    bottom: 0px;
    right: 0px;
    overflow: hidden;
    background-size: cover;
    background-repeat: no-repeat;
    background-position: 50% 50%;
    background: url("../img/topBlockBg.png");

.top_block__overlay
    position: absolute
    width: 100%
    height: 100%
    background #f8f8f8
    opacity 0.3

.video_background video
    min-width: 100%;
    min-height: 100%;

    /* Setting width & height to auto prevents the browser from stretching or squishing the video */
    width: auto;
    height: auto;

    /* Center the video */
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);

.top_block__header
    header()

.top_block__additional_text
    additionalText()
    line-height: 1.5em

.top_block__container
    width 100%
    max-width: 650px

.top_block__button_container    
    display: flex
    flex-wrap: wrap
    margin-top 40px
    .common__button
        margin-right 15px
        margin-bottom: 20px
