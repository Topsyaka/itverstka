.header
    width 100%
    height 90px
    .container
        display: flex
        align-items: center
        justify-content: flex-end
        flex-wrap wrap
        @media screen and (max-width 425px)
            justify-content center

.header__navigation
    ul
        display: flex
        flex-direction: row
        list-style: none
        padding: 0
            
.header__link
    font-family: 'Raleway', sans-serif
    font-weight 700
    font-size: 15px
    text-decoration: none
    color: #3d3d3d
    display: block
    margin: 0 12px
    &:hover
        color: #21c1fc